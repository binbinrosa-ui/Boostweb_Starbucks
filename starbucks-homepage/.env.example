# Starbucks Homepage - 환경 설정 (예시)
NODE_ENV=development
PORT=3000

# MongoDB 데이터베이스 설정
# MongoDB Atlas URI (우선순위 1 - 클라우드 데이터베이스)
# 형식: mongodb+srv://사용자명:비밀번호@클러스터주소/데이터베이스명
MONGO_ATLAS_URI=mongodb+srv://your_username:your_password@your_cluster.mongodb.net/your_database?retryWrites=true&w=majority

# MongoDB 로컬 설정 (MONGO_ATLAS_URI가 없을 때만 사용)
MONGODB_URI=mongodb://localhost:27017/starbucks

# API 설정
API_BASE_URL=http://localhost:3000/api
CORS_ORIGIN=http://localhost:3000

# 보안 설정 (실제 사용 시 복잡한 키로 변경하세요)
JWT_SECRET=your_jwt_secret_key_change_this_in_production
SESSION_SECRET=your_session_secret_change_this_in_production

# 개발 도구 설정
DEBUG=true
LOG_LEVEL=debug